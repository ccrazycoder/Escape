<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/main">
	<FrameLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/FrameLayout01" android:layout_gravity="right" android:layout_marginTop="400dp" android:layout_marginRight="80dp">
		<LinearLayout android:orientation="vertical" android:id="@+id/LinearLayout02"
			android:layout_height="wrap_content" android:layout_width="wrap_content">
			<TextView android:id="@+id/txtNewGame" android:layout_width="wrap_content"
				android:text="New Game" android:textStyle="bold" android:textColor="@color/white"
				android:layout_height="wrap_content" android:layout_gravity="center" android:textSize="80dp"></TextView>
			<TextView android:id="@+id/txtSettings"
				android:layout_width="wrap_content" android:text="Settings"
				android:textStyle="bold" android:textColor="@color/white"
				android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="10dp" android:textSize="80dp"></TextView>
			<TextView android:id="@+id/txtExit" android:layout_width="wrap_content"
				android:text="Exit" android:textStyle="bold" android:textColor="@color/white"
				android:layout_height="wrap_content" android:layout_gravity="center" android:layout_marginTop="10dp" android:textSize="80dp"></TextView>
		</LinearLayout>
	</FrameLayout>
	<LinearLayout android:layout_gravity="bottom" android:id="@+id/mainLayout"
		android:layout_width="fill_parent"
		android:layout_height="50dp">
	</LinearLayout>
</FrameLayout>
